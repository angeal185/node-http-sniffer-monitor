{
    "name": "chrome-validate",
    "version": "1.0.0",
    "description": "chrome validation",
    "icons": {
      "16": "/app/img/ico.png",
      "48": "/app/img/ico.png",
      "128": "/app/img/ico.png"
    },
    "offline_enabled": true,
    "background": {
      "scripts": ["app/js/background.js"],
      "persistent": true
    },
    "permissions": [
       "<all_urls>",
       "unlimitedStorage",
       "storage",
       "webRequest"
    ],
    "manifest_version": 2
}
